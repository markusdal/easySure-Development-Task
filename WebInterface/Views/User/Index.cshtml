@model IEnumerable<Domain.User>

@{
    ViewData["Title"] = "Users List";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="CreateUser" class="btn btn-success mb-3">Add New User</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Id</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>